<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dash">

    <TextView
        android:id="@+id/tv_add_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Add Friends"
        android:textColor="#fff"
        android:textSize="32dp" />

    <EditText

        android:layout_below="@+id/tv_add_friends"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:inputType="phone"
        android:textSize="24dp"
        android:textColorHint="#fff"
        android:gravity="center"
        android:maxLength="10"
        android:singleLine="true"
        android:textColor="#fff"
        android:hint="Friend1 mobile number"
        android:id="@+id/et_friend1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_below="@+id/et_friend1"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:inputType="phone"
        android:textSize="24dp"
        android:textColorHint="#fff"
        android:gravity="center"
        android:maxLength="10"
        android:singleLine="true"
        android:textColor="#fff"
        android:hint="Friend2 mobile number"
        android:id="@+id/et_friend2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <EditText
        android:layout_below="@+id/et_friend2"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:inputType="phone"
        android:textSize="24dp"
        android:textColorHint="#fff"
        android:gravity="center"
        android:maxLength="10"
        android:singleLine="true"
        android:textColor="#fff"
        android:hint="Friend3 mobile number"
        android:id="@+id/et_friend3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="32dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/bt_Add"
        android:text="Add"
        android:background="@color/colorPrimaryDark"
        android:textSize="24dp"
        android:textColor="#fff"
        android:layout_below="@+id/et_friend3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>